{
  "name": "game",
  "version": "1.0.0",
  "description": "game",
  "main": "index.js",
  "scripts": {
    "unit": "jest",
    "lint": "eslint --ext .js,.ts,.json packages",
    "test": "npm run lint && npm run unit",
    "watch": "jest --watch",
    "postinstall": "npm run tsconfig && lerna bootstrap --hoist",
    "tsconfig": "lerna exec \"ln -s ../../tsconfig.json ./tsconfig.json\"",
    "compile": "lerna run compile --stream --parallel",
    "clean": "lerna exec \"rm -rf node_modules && rm -rf dist && rm -f tsconfig.json\" && rm -rf node_modules"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/revilossor/game.git"
  },
  "author": "oliver.ross@hotmail.com",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "lerna": "^3.15.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "eslint --fix",
      "git add"
    ]
  }
}
